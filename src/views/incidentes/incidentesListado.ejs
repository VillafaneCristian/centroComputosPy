                        <%- include ('../partials/listadoIncidentes-titulosTablas') %>
                    </thead>
                    <tbody>
                        <% incidentesAsignadosTaller.forEach((unIncidente)=>{ %>
                            <%- include ('../partials/listadoIncidentes',{unIncidente}) %>
                        <% }) %>
                    </tbody>
                <% }else{ %>
                    <%- include ('../partials/listadoIncidentes-textoAlternativo') %>
                <% } %>
            </table>
        </section>

        <section class="listado">  
            <h2 class="listado_titulo">INCIDENTES EN PRESTAMOS</h2> 
            <table>
                <% if(incidentesPrestamos != ''){ %>
                    <thead>
                        <%- include ('../partials/listadoIncidentes-titulosTablas') %>
                    </thead>
                    <tbody>
                        <% incidentesPrestamos.forEach((unIncidente)=>{ %>
                            <%- include ('../partials/listadoIncidentes',{unIncidente}) %>
                        <% }) %>
                    </tbody>
                <% }else{ %>
                    <%- include ('../partials/listadoIncidentes-textoAlternativo') %>
                <% } %>
            </table>
        </section>

    </main>
  
    <footer>
       
    </footer>
</body>
</html>